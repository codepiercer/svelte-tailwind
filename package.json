{
  "name": "@codepiercer/svelte-tailwind",
  "version": "0.4.0",
  "scripts": {
    "dev": "vite dev --host",
    "build": "npm run lint && svelte-package",
    "publish": "npm run build && npm publish ./package --access public",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir=. . --check && eslint . && npm run check",
    "lint:fix": "prettier --plugin-search-dir=. . --write && eslint . --fix",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "2.0.0",
    "@sveltejs/package": "2.0.1",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "@tanstack/svelte-query": "4.24.9",
    "svelte-french-toast": "1.0.3",
    "svelte-check": "3.0.3",
    "svelte-forms-lib": "2.0.1",
    "yup": "1.0.0",
    "tslib": "2.5.0",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "@sveltejs/kit": "1.7.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@imask/svelte": "6.4.3",
    "autoprefixer": "10.4.13",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-svelte3": "4.0.0",
    "flatpickr": "4.6.13",
    "husky": "8.0.3",
    "postcss": "8.4.21",
    "prettier": "2.8.4",
    "prettier-plugin-svelte": "2.9.0",
    "prettier-plugin-tailwindcss": "0.2.3",
    "svelte": "3.55.1",
    "tailwindcss": "3.2.7",
    "tailwind-merge": "1.9.1",
    "vite": "4.1.2"
  },
  "type": "module"
}
