{
  "name": "@codepiercer/svelte-tailwind",
  "version": "0.0.9",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run lint && svelte-package",
    "publish": "npm run build && npm publish ./package --access public",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir=. . --check && eslint . && npm run check",
    "lint:fix": "prettier --plugin-search-dir=. . --write && eslint . --fix",
    "husky": "husky install && husky add .husky/pre-commit \" npm run lint\""
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "1.0.0",
    "@sveltejs/package": "1.0.2",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "svelte-check": "3.0.2",
    "tslib": "2.4.1",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "tailwindcss": "3.2.4",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "prettier-plugin-tailwindcss": "0.2.1",
    "autoprefixer": "10.4.13",
    "postcss": "8.4.21",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-svelte3": "4.0.0",
    "husky": "8.0.3",
    "prettier": "2.8.2",
    "prettier-plugin-svelte": "2.9.0",
    "@sveltejs/kit": "1.0.11",
    "svelte": "3.55.1",
    "vite": "4.0.4"
  },
  "type": "module"
}
